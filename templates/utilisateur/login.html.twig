{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <body>
        <div class="container mt-4">
            <div class="row justify-content-center col-10 lg-6 m-auto">
                <div class="col-md-8" style="margin-top:-20px;">
                    <div class="card">
                        <div class="card-header ">
                            <h5 class="text-center"><i class="fas fa-sign-in-alt"></i> Connexion</h5>
                        </div>
                        <div class="card-body">
                            <div class="col-8 lg-4 sm-4 m-auto">
                                <form method="post" action="{{ path('app_login') }}" class="needs-validation" novalidate>
                                    {{ error }}
                                    <div class="form-group mt-2">
                                        <label for="email"><i class="fas fa-envelope" style="color:green"></i> Email :</label>
                                        <input type="email" id="email" name="_username" class="form-control mt-2" required>
                                        <div class="invalid-feedback">Veuillez entrer une adresse email valide.</div>
                                    </div>
                                    <div class="form-group">
                                        <label for="password"><i class="fas fa-lock" style="color:green"></i> Mot de passe :</label>
                                        <input type="password" id="password" name="_password" class="form-control mt-2" required>
                                        <div class="invalid-feedback">Veuillez entrer un mot de passe.</div>
                                    </div>
                                    <button type="submit" class="btn btn-primary mt-3" style="width:300px; margin-left:30px;"><i class="fas fa-sign-in-alt"></i> Se connecter</button>
                                </form>
                                <a href="{{ path('admin_registre') }}">S'inscrire</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
{% endblock %}
