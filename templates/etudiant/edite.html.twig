{% extends 'base.html.twig' %}

{% block body %}
    <h6>Édition de l'étudiant</h6>

    <form class="container" method="post">
    <div class="col-4 lg-4 sm-4">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'font-weight-bold'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                {# Appliquez les classes Bootstrap à votre champ Nom #}
            </div>
            <div class="form-group">
                {{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'font-weight-bold'}}) }}
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                {# Appliquez les classes Bootstrap à votre champ Prénom #}
            </div>
            <div class="form-group">
                {{ form_label(form.pere, 'pere', {'label_attr': {'class': 'font-weight-bold'}}) }}
                {{ form_widget(form.pere, {'attr': {'class': 'form-control'}}) }}
                {# Appliquez les classes Bootstrap à votre champ Nom #}
            </div>
             <div class="form-group">
                {{ form_label(form.mere, 'mere', {'label_attr': {'class': 'font-weight-bold'}}) }}
                {{ form_widget(form.mere, {'attr': {'class': 'form-control'}}) }}
                {# Appliquez les classes Bootstrap à votre champ Nom #}
            </div>
            <div class="form-group">
                {{ form_label(form.collective, 'collective', {'label_attr': {'class': 'font-weight-bold'}}) }}
                {{ form_widget(form.collective, {'attr': {'class': 'form-control'}}) }}
                {# Appliquez les classes Bootstrap à votre champ Nom #}
            </div>
             <div class="form-group">
                {{ form_label(form.individuel, 'individuel', {'label_attr': {'class': 'font-weight-bold'}}) }}
                {{ form_widget(form.individuel, {'attr': {'class': 'form-control'}}) }}
                {# Appliquez les classes Bootstrap à votre champ Nom #}
            </div>
            {# Ajoutez d'autres champs avec leurs classes Bootstrap #}

            <button type="submit" class="btn btn-primary">Enregistrer</button>
        {{ form_end(form) }}
    </form>
{% endblock %}
